@import 'nib';
&, body
    height: 100%
    background: #F7F7F7
.card
    box-shadow: 1px 1px 3px rgba(0,0,0,0.5)
    background: #FFF
    position: relative
    z-index: 0
    transition: box-shadow 0.5s
    &:hover
        z-index: 1
        box-shadow: 1px 1px 10px rgba(0,0,0,0.6)
a
    cursor: pointer
.form-group .alert
    margin-bottom: 0.2em
    padding: 0.6em
.loading
    text-align: center;
    font-size: 1.5em
    padding: 1em
    font-family: Impact, Charcoal, sans-serif
    color: #999
    @keyframes loading-bounce
        0%
            transform: translateY(-10%)
        50%
            transform: translateY(10%)
        100%
            transform: translateY(-10%)
    animation: loading-bounce 2s ease 0s infinite 
    &::after
        content:"Loading"